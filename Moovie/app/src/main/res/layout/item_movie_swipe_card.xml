<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="450dp"
    android:layout_gravity="center"
    android:layout_margin="@dimen/material_margin_normal"
    app:cardCornerRadius="@dimen/material_margin_half"
    app:cardElevation="@dimen/material_margin_half">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivCardPoster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:src="@drawable/bg_splash" />

        <TextView
            android:id="@+id/tvCardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvCardScore"
            android:layout_marginEnd="@dimen/material_margin_normal"
            android:layout_marginStart="@dimen/material_margin_normal"
            android:layout_marginTop="@dimen/material_margin_half"
            android:singleLine="true"
            android:textAppearance="@android:style/TextAppearance.Material.Title"
            android:textColor="@android:color/white"
            tools:text="@string/app_name" />

        <TextView
            android:id="@+id/tvCardScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/material_margin_half"
            android:layout_marginEnd="@dimen/material_margin_normal"
            android:layout_marginStart="@dimen/material_margin_normal"
            android:layout_marginTop="@dimen/material_margin_half"
            android:text="Score: 7"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
